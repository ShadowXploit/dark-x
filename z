from pytube import YouTube

# Inputkan link YouTube 
url = input("  \033[1;31m[\033[1;36m+\033[1;31m] \033[1;34mYouTube video link \033[1;31m: \033[1;37m")

# Mendownload audio dari link yang diinput
yt = YouTube(url)
stream = yt.streams.filter(only_audio=True).first()
output_file = yt.title + '.mp3'
stream.download(output_path='/sdcard', filename=output_file)

print("  \033[1;31m[\033[1;36m+\033[1;31m] \033[1;36mAudio saved in internal memory!")
